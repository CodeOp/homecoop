    return array();
  }
  
  $oOrderTabInfo = $oFormExtraData['ordertab'];
  
  $arrContent = array(
    'tabs' => array(
      '#prefix' => '<table id="tabOrder" cellpadding="0" cellspacing="0" border="0" width="100%"><tr><td><ul class="tabrow subtabrow">',
      '#suffix' => '</ul></td></tr></table>',
